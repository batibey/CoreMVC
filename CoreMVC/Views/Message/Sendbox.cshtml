@using EntityLayer.Concrete
@model List<Message2>
@{
    ViewData["Title"] = "Sendbox";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Giden Kutusu</h1>
<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>Konu</th>
        <th>Alıcı</th>
        <th>Tarih</th>
        <th>Görüntüle</th>
        
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.MesajID</th>
            <td>@item.Subject</td>
            <td>@item.ReceiverUser.WriterName</td>
            <td>@(((DateTime)item.MessageDate).ToString("dd-MMM-yyyy"))</td>

            
            <td><a href="/Message/MessageDetails/@item.MesajID" class="btn btn-warning">Görüntüle</a></td>

        </tr>
    }
</table>
<a href="/Message/SendMessage/" class="btn btn-primary">Yeni Mesaj</a>

