@model EntityLayer.Concrete.Message2
@{
    ViewData["Title"] = "MessageDetails";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Mesaj Detay</h1>
<br />

    @Html.Label("Mesaj ID")
    @Html.TextBoxFor(x=>x.MesajID, new {@class= "form-control"})
    <br />

    @Html.Label("Mesaj Başlık")
    @Html.TextBoxFor(x=>x.Subject, new {@class= "form-control"})
    <br />

    @Html.Label("Mesaj İçerik")
    @Html.TextAreaFor(x=>x.MessageDetails,10,3, new {@class= "form-control"})
    <br />
    <button class="btn btn-success">Mesajlara Dön</button>



